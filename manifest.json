{
  "name": "Custom New Tab with Bookmarks",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Displays bookmarks on a new tab page with a daily background image from Unsplash.",
  "permissions": ["bookmarks", "storage"],
  "host_permissions": ["https://api.unsplash.com/"],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "icons/icon16.html",
    "48": "icons/icon48.html",
    "128": "icons/icon128.html"
  }
}
